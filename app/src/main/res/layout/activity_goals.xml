<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/ll_bottom_tab"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:paddingLeft="@dimen/_5sdp"
            android:paddingRight="@dimen/_5sdp"
            android:background="@drawable/tab_shadow_bg">

            <LinearLayout
                android:id="@+id/ll_nutrition"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginTop="@dimen/_7sdp"
                android:layout_marginBottom="@dimen/_7sdp">

                <ImageView
                    android:layout_width="@dimen/_20sdp"
                    android:layout_height="@dimen/_20sdp"
                    android:src="@drawable/tab_nutrition_non_icon"
                    android:layout_gravity="center_horizontal"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Nutrition"
                    android:textColor="@color/light_gray"
                    android:layout_marginTop="@dimen/_3sdp"
                    android:layout_gravity="center_horizontal"
                    android:fontFamily="@font/rubik"/>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_fitness"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginTop="@dimen/_7sdp"
                android:layout_marginBottom="@dimen/_7sdp">

                <ImageView
                    android:layout_width="@dimen/_20sdp"
                    android:layout_height="@dimen/_20sdp"
                    android:src="@drawable/tab_fitness_icon"
                    android:layout_gravity="center_horizontal"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Fitness"
                    android:textColor="@color/light_gray"
                    android:layout_marginTop="@dimen/_3sdp"
                    android:layout_gravity="center_horizontal"
                    android:fontFamily="@font/rubik"/>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_goals"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginTop="@dimen/_7sdp"
                android:layout_marginBottom="@dimen/_7sdp">

                <ImageView
                    android:layout_width="@dimen/_20sdp"
                    android:layout_height="@dimen/_20sdp"
                    android:src="@drawable/slating_flag_selected"
                    android:layout_gravity="center_horizontal"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Goals"
                    android:textColor="@color/main_color"
                    android:layout_marginTop="@dimen/_3sdp"
                    android:layout_gravity="center_horizontal"
                    android:fontFamily="@font/rubik"/>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_social"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginTop="@dimen/_7sdp"
                android:layout_marginBottom="@dimen/_7sdp">

                <ImageView
                    android:layout_width="@dimen/_20sdp"
                    android:layout_height="@dimen/_20sdp"
                    android:src="@drawable/tab_sosial_icon"
                    android:layout_gravity="center_horizontal"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Social"
                    android:textColor="@color/light_gray"
                    android:layout_marginTop="@dimen/_3sdp"
                    android:layout_gravity="center_horizontal"
                    android:fontFamily="@font/rubik"/>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_profile"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginTop="@dimen/_7sdp"
                android:layout_marginBottom="@dimen/_7sdp">

                <ImageView
                    android:layout_width="@dimen/_20sdp"
                    android:layout_height="@dimen/_20sdp"
                    android:src="@drawable/tab_profile_icon"
                    android:layout_gravity="center_horizontal"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Profile"
                    android:textColor="@color/light_gray"
                    android:layout_marginTop="@dimen/_3sdp"
                    android:layout_gravity="center_horizontal"
                    android:fontFamily="@font/rubik"/>

            </LinearLayout>

        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@+id/ll_bottom_tab">

            <LinearLayout
                android:id="@+id/ll_header"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/main_color">

                <RelativeLayout
                    android:id="@+id/rl_header"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/_15sdp">

                    <ImageView
                        android:id="@+id/img_side_bar"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/vect_back"
                        android:visibility="gone"/>

                    <TextView
                        android:id="@+id/txt_header_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Goals"
                        android:textSize="@dimen/_14sdp"
                        android:textColor="@color/white"
                        android:textStyle="bold"
                        android:fontFamily="@font/rubik"
                        android:layout_centerHorizontal="true"/>

                    <TextView
                        android:id="@+id/txt_goal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Goal"
                        android:textStyle="bold"
                        android:textColor="@color/light_blue"
                        android:fontFamily="@font/rubik"
                        android:layout_alignParentRight="true"
                        android:drawableLeft="@drawable/add_icon"
                        android:drawablePadding="@dimen/_5sdp"
                        android:layout_centerVertical="true"/>

                </RelativeLayout>

                <HorizontalScrollView
                    android:id="@+id/hsv_tab"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/txt_que"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:layout_marginBottom="@dimen/_20sdp"
                    android:layout_marginLeft="@dimen/_20sdp"
                    android:scrollbars="none">

                    <LinearLayout
                        android:id="@+id/ll_tab"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <LinearLayout
                            android:orientation="vertical"
                            android:id="@+id/ll_weight_tab"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:layout_marginRight="@dimen/_15sdp">

                            <TextView
                                android:id="@+id/txt_weight_tab"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Weight"
                                android:textSize="@dimen/_13sdp"
                                android:textStyle="bold"
                                android:textColor="@color/white"
                                android:fontFamily="@font/rubik"/>

                            <View
                                android:id="@+id/view_weight"
                                android:layout_width="@dimen/_25sdp"
                                android:layout_height="1dp"
                                android:layout_marginTop="@dimen/_2sdp"
                                android:background="@color/white"/>

                        </LinearLayout>

                        <LinearLayout
                            android:orientation="vertical"
                            android:id="@+id/ll_protein_tab"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:layout_centerHorizontal="true"
                            android:layout_marginRight="@dimen/_15sdp">

                            <TextView
                                android:id="@+id/txt_protein_tab"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Protein"
                                android:textSize="@dimen/_13sdp"
                                android:textStyle="bold"
                                android:textColor="@color/light_gray"
                                android:fontFamily="@font/rubik"/>

                            <View
                                android:id="@+id/view_protein"
                                android:layout_width="@dimen/_25sdp"
                                android:layout_height="1dp"
                                android:layout_marginTop="@dimen/_2sdp"
                                android:background="@color/white"
                                android:visibility="gone"/>

                        </LinearLayout>

                        <LinearLayout
                            android:orientation="vertical"
                            android:id="@+id/ll_cholesterol_tab"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:layout_alignParentRight="true"
                            android:layout_marginRight="@dimen/_15sdp">

                            <TextView
                                android:id="@+id/txt_cholesterol_tab"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Cholesterol"
                                android:textSize="@dimen/_13sdp"
                                android:textStyle="bold"
                                android:textColor="@color/light_gray"
                                android:fontFamily="@font/rubik"/>

                            <View
                                android:id="@+id/view_cholesterol"
                                android:layout_width="@dimen/_25sdp"
                                android:layout_height="1dp"
                                android:layout_marginTop="@dimen/_2sdp"
                                android:background="@color/white"
                                android:visibility="gone"/>

                        </LinearLayout>

                        <LinearLayout
                            android:orientation="vertical"
                            android:id="@+id/ll_waist_tab"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:layout_alignParentRight="true"
                            android:layout_marginRight="@dimen/_15sdp">

                            <TextView
                                android:id="@+id/txt_waist_tab"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Waist"
                                android:textSize="@dimen/_13sdp"
                                android:textStyle="bold"
                                android:textColor="@color/light_gray"
                                android:fontFamily="@font/rubik"/>

                            <View
                                android:id="@+id/view_waist"
                                android:layout_width="@dimen/_25sdp"
                                android:layout_height="1dp"
                                android:layout_marginTop="@dimen/_2sdp"
                                android:background="@color/white"
                                android:visibility="gone"/>

                        </LinearLayout>

                    </LinearLayout>

                </HorizontalScrollView>

            </LinearLayout>

            <com.github.mikephil.charting.charts.LineChart
                android:id="@+id/line_chart"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/ll_header"
                android:layout_above="@+id/txt_start_date"/>

            <TextView
                android:id="@+id/txt_start_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="Dec '18"
                android:textColor="@color/main_color"
                android:textStyle="bold"
                android:fontFamily="@font/rubik"
                android:layout_above="@+id/txt_last_update"
                android:layout_marginLeft="@dimen/_20sdp"/>

            <TextView
                android:id="@+id/txt_end_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="May '19"
                android:textColor="@color/main_color"
                android:textStyle="bold"
                android:fontFamily="@font/rubik"
                android:layout_alignParentRight="true"
                android:layout_above="@+id/txt_last_update"
                android:layout_marginRight="@dimen/_20sdp"/>

            <TextView
                android:id="@+id/txt_last_update"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="Last Updated   May 22, 2019"
                android:textColor="@color/light_blue_text"
                android:textStyle="bold"
                android:fontFamily="@font/rubik"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="@dimen/_10sdp"
                android:layout_marginLeft="@dimen/_20sdp"/>

        </RelativeLayout>

    </RelativeLayout>

</layout>