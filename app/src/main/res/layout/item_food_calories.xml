<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools">

    <LinearLayout
        android:id="@+id/ll_header"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/main_color"
        android:paddingBottom="@dimen/_10sdp">

        <TextView
            android:id="@+id/txt_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Fri, Feb 8"
            android:textColor="@color/light_blue"
            android:textSize="16sp"
            android:drawablePadding="@dimen/_7sdp"
            android:drawableLeft="@drawable/left_arrow"
            android:drawableRight="@drawable/right_arrow"
            android:fontFamily="@font/rubik"
            android:layout_gravity="center_horizontal"/>

        <LinearLayout
            android:id="@+id/ll_tab"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_10sdp"
            android:gravity="center">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/_10sdp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:textColor="@color/white"
                    android:text="Calories"
                    android:fontFamily="@font/rubik" />

                <View
                    android:layout_width="@dimen/_25sdp"
                    android:layout_height="@dimen/_1sdp"
                    android:background="@color/white"
                    android:layout_marginTop="@dimen/_2sdp"
                    android:layout_gravity="center_horizontal"/>

            </LinearLayout>

            <TextView
                android:id="@+id/txt_nutrients_tab"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:textColor="@color/light_gray"
                android:text="Nutrients"
                android:layout_marginLeft="@dimen/_10sdp"
                android:fontFamily="@font/rubik"/>

        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/_60sdp">

            <LinearLayout
                android:id="@+id/ll_week_cal"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toLeftOf="@+id/divider"
                android:layout_marginRight="@dimen/_2sdp"
                android:layout_marginLeft="@dimen/_5sdp"
                android:layout_centerVertical="true">

                <LinearLayout
                    android:id="@+id/ll_sunday"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:layout_weight="1">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="S"
                        android:textColor="@color/white"
                        android:fontFamily="@font/rubik"/>

                    <TextView
                        android:id="@+id/txt_sunday_date"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="1"
                        android:textColor="@color/white"
                        android:gravity="center"
                        android:fontFamily="@font/rubik"
                        android:background="@drawable/calendar_circle"
                        android:layout_marginTop="@dimen/_5sdp"/>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_monday"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:layout_weight="1">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="M"
                        android:textColor="@color/white"
                        android:fontFamily="@font/rubik"/>

                    <TextView
                        android:id="@+id/txt_monday_date"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="2"
                        android:textColor="@color/white"
                        android:gravity="center"
                        android:fontFamily="@font/rubik"
                        android:background="@drawable/calendar_circle"
                        android:layout_marginTop="@dimen/_5sdp"/>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_tuesday"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:layout_weight="1">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="T"
                        android:textColor="@color/white"
                        android:fontFamily="@font/rubik"/>

                    <TextView
                        android:id="@+id/txt_tuesday_date"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="3"
                        android:textColor="@color/white"
                        android:gravity="center"
                        android:fontFamily="@font/rubik"
                        android:background="@drawable/calendar_circle"
                        android:layout_marginTop="@dimen/_5sdp"/>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_wednesday"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:layout_weight="1">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="W"
                        android:textColor="@color/white"
                        android:fontFamily="@font/rubik"/>

                    <TextView
                        android:id="@+id/txt_wednesday_date"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="4"
                        android:textColor="@color/white"
                        android:gravity="center"
                        android:fontFamily="@font/rubik"
                        android:background="@drawable/calendar_circle"
                        android:layout_marginTop="@dimen/_5sdp"/>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_thursday"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:layout_weight="1">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="T"
                        android:textColor="@color/white"
                        android:fontFamily="@font/rubik"/>

                    <TextView
                        android:id="@+id/txt_thursday_date"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="5"
                        android:textColor="@color/white"
                        android:gravity="center"
                        android:fontFamily="@font/rubik"
                        android:background="@drawable/calendar_circle"
                        android:layout_marginTop="@dimen/_5sdp"/>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_friday"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:layout_weight="1">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="F"
                        android:textColor="@color/white"
                        android:fontFamily="@font/rubik"/>

                    <TextView
                        android:id="@+id/txt_friday_date"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="6"
                        android:textColor="@color/white"
                        android:gravity="center"
                        android:fontFamily="@font/rubik"
                        android:background="@drawable/calendar_circle"
                        android:layout_marginTop="@dimen/_5sdp"/>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_saturday"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:layout_weight="1">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="S"
                        android:textColor="@color/white"
                        android:fontFamily="@font/rubik"/>

                    <TextView
                        android:id="@+id/txt_saturday_date"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="7"
                        android:textColor="@color/white"
                        android:gravity="center"
                        android:fontFamily="@font/rubik"
                        android:background="@drawable/calendar_circle"
                        android:layout_marginTop="@dimen/_5sdp"/>

                </LinearLayout>

            </LinearLayout>

            <View
                android:id="@+id/divider"
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="@color/light_gray"
                android:layout_toLeftOf="@+id/ll_week_calorie"
                android:layout_marginRight="@dimen/_2sdp"
                android:paddingTop="@dimen/_2sdp"
                android:paddingBottom="@dimen/_2sdp"/>

            <LinearLayout
                android:id="@+id/ll_week_calorie"
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:gravity="center_horizontal"
                android:layout_marginRight="@dimen/_5sdp"
                android:layout_centerVertical="true">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Week"
                    android:textColor="@color/yellow"
                    android:fontFamily="@font/rubik"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Under"
                    android:textColor="@color/yellow"
                    android:fontFamily="@font/rubik"
                    android:layout_marginTop="@dimen/_5sdp"/>

                <TextView
                    android:id="@+id/txt_week_under"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="171"
                    android:textStyle="bold"
                    android:textColor="@color/light_blue_text"
                    android:fontFamily="@font/rubik"
                    android:layout_marginTop="@dimen/_5sdp"/>

            </LinearLayout>

        </RelativeLayout>

        <ProgressBar
            android:id="@+id/pb_calorie"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:indeterminate="false"
            android:minHeight="@dimen/_10sdp"
            style="@style/progressBar"
            android:max="100"
            android:progress="50"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_marginLeft="@dimen/_10sdp"
            android:layout_marginRight="@dimen/_10sdp"/>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_marginLeft="@dimen/_10sdp"
            android:layout_marginRight="@dimen/_10sdp"
            android:background="@drawable/rectangle_main_blue_bg"
            android:backgroundTint="@color/white"
            android:padding="@dimen/_5sdp">

            <LinearLayout
                android:id="@+id/ll_budget"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:layout_weight="1">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Budget"
                    android:textColor="@color/main_color"
                    android:fontFamily="@font/rubik"/>

                <TextView
                    android:id="@+id/txt_budget"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="1645"
                    android:textStyle="bold"
                    android:textColor="@color/main_color"
                    android:gravity="center"
                    android:fontFamily="@font/rubik"
                    android:layout_marginTop="@dimen/_2sdp"/>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_food"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:layout_weight="1">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Food"
                    android:textColor="@color/light_gray"
                    android:fontFamily="@font/rubik"/>

                <TextView
                    android:id="@+id/txt_food"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="1255"
                    android:textStyle="bold"
                    android:textColor="@color/light_blue_text"
                    android:gravity="center"
                    android:fontFamily="@font/rubik"
                    android:layout_marginTop="@dimen/_2sdp"/>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_exercise"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:layout_weight="1">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Exercise"
                    android:textColor="@color/light_gray"
                    android:fontFamily="@font/rubik"/>

                <TextView
                    android:id="@+id/txt_exercise"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="2153"
                    android:textStyle="bold"
                    android:textColor="@color/light_blue_text"
                    android:gravity="center"
                    android:fontFamily="@font/rubik"
                    android:layout_marginTop="@dimen/_2sdp"/>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_net"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:layout_weight="1">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Net"
                    android:textColor="@color/main_color"
                    android:fontFamily="@font/rubik"/>

                <TextView
                    android:id="@+id/txt_net"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="2153"
                    android:textStyle="bold"
                    android:textColor="@color/light_blue_text"
                    android:gravity="center"
                    android:fontFamily="@font/rubik"
                    android:layout_marginTop="@dimen/_2sdp"/>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_under"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:layout_weight="1">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Under"
                    android:textColor="@color/yellow"
                    android:fontFamily="@font/rubik"/>

                <TextView
                    android:id="@+id/txt_under"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="2153"
                    android:textStyle="bold"
                    android:textColor="@color/yellow"
                    android:gravity="center"
                    android:fontFamily="@font/rubik"
                    android:layout_marginTop="@dimen/_2sdp"/>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rv_food_recipe"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/ll_header"
        android:padding="@dimen/_10sdp"
        tools:listitem="@layout/item_food_calories_list"/>

</RelativeLayout>