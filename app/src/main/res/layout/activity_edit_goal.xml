<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/ll_bottom_tab"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:paddingLeft="@dimen/_5sdp"
            android:paddingRight="@dimen/_5sdp"
            android:background="@drawable/tab_shadow_bg">

            <LinearLayout
                android:id="@+id/ll_nutrition"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginTop="@dimen/_7sdp"
                android:layout_marginBottom="@dimen/_7sdp">

                <ImageView
                    android:layout_width="@dimen/_20sdp"
                    android:layout_height="@dimen/_20sdp"
                    android:src="@drawable/tab_nutrition_non_icon"
                    android:layout_gravity="center_horizontal"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Nutrition"
                    android:textColor="@color/light_gray"
                    android:layout_marginTop="@dimen/_3sdp"
                    android:layout_gravity="center_horizontal"
                    android:fontFamily="@font/rubik"/>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_fitness"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginTop="@dimen/_7sdp"
                android:layout_marginBottom="@dimen/_7sdp">

                <ImageView
                    android:layout_width="@dimen/_20sdp"
                    android:layout_height="@dimen/_20sdp"
                    android:src="@drawable/tab_fitness_icon"
                    android:layout_gravity="center_horizontal"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Fitness"
                    android:textColor="@color/light_gray"
                    android:layout_marginTop="@dimen/_3sdp"
                    android:layout_gravity="center_horizontal"
                    android:fontFamily="@font/rubik"/>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_goals"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginTop="@dimen/_7sdp"
                android:layout_marginBottom="@dimen/_7sdp">

                <ImageView
                    android:layout_width="@dimen/_20sdp"
                    android:layout_height="@dimen/_20sdp"
                    android:src="@drawable/slating_flag_selected"
                    android:layout_gravity="center_horizontal"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Goals"
                    android:textColor="@color/main_color"
                    android:layout_marginTop="@dimen/_3sdp"
                    android:layout_gravity="center_horizontal"
                    android:fontFamily="@font/rubik"/>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_social"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginTop="@dimen/_7sdp"
                android:layout_marginBottom="@dimen/_7sdp">

                <ImageView
                    android:layout_width="@dimen/_20sdp"
                    android:layout_height="@dimen/_20sdp"
                    android:src="@drawable/tab_sosial_icon"
                    android:layout_gravity="center_horizontal"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Social"
                    android:textColor="@color/light_gray"
                    android:layout_marginTop="@dimen/_3sdp"
                    android:layout_gravity="center_horizontal"
                    android:fontFamily="@font/rubik"/>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_profile"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginTop="@dimen/_7sdp"
                android:layout_marginBottom="@dimen/_7sdp">

                <ImageView
                    android:layout_width="@dimen/_20sdp"
                    android:layout_height="@dimen/_20sdp"
                    android:src="@drawable/tab_profile_icon"
                    android:layout_gravity="center_horizontal"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Profile"
                    android:textColor="@color/light_gray"
                    android:layout_marginTop="@dimen/_3sdp"
                    android:layout_gravity="center_horizontal"
                    android:fontFamily="@font/rubik"/>

            </LinearLayout>

        </LinearLayout>

        <RelativeLayout
            android:id="@+id/rl_header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/_15sdp"
            android:background="@color/main_color">

            <ImageView
                android:id="@+id/img_side_bar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/vect_back"/>

            <TextView
                android:id="@+id/txt_header_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Set a Goal"
                android:textSize="@dimen/_14sdp"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:fontFamily="@font/rubik"
                android:layout_centerHorizontal="true"/>

            <TextView
                android:id="@+id/txt_add"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Add"
                android:textStyle="bold"
                android:textColor="@color/light_blue"
                android:fontFamily="@font/rubik"
                android:layout_alignParentRight="true"
                android:drawableLeft="@drawable/save_icon"
                android:drawablePadding="@dimen/_5sdp"
                android:layout_centerVertical="true"/>

        </RelativeLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/rl_header"
            android:layout_above="@+id/ll_bottom_tab">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <RelativeLayout
                    android:id="@+id/rl_protein"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="@dimen/_20sdp"
                    android:paddingRight="@dimen/_20sdp"
                    android:paddingBottom="@dimen/_10sdp"
                    android:paddingTop="@dimen/_20sdp">

                    <TextView
                        android:id="@+id/txt_protein"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Protein"
                        android:textColor="@color/main_color"
                        android:textSize="@dimen/_14sdp"
                        android:fontFamily="@font/rubik"
                        android:layout_centerVertical="true"
                        android:layout_toLeftOf="@+id/txt_food_count"
                        android:layout_marginRight="@dimen/_10sdp"/>

                    <TextView
                        android:id="@+id/txt_protein_count"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Set Goal"
                        android:textStyle="bold"
                        android:textColor="@color/light_blue_text"
                        android:textSize="@dimen/_14sdp"
                        android:fontFamily="@font/rubik"
                        android:layout_centerVertical="true"
                        android:layout_toLeftOf="@+id/img_right_icon"
                        android:layout_marginRight="@dimen/_10sdp"/>

                    <ImageView
                        android:id="@+id/img_right_icon"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/up_down"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"/>

                </RelativeLayout>

                <View
                    android:id="@+id/view1"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/light_gray"/>

                <RelativeLayout
                    android:id="@+id/rl_carbs"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="@dimen/_20sdp"
                    android:paddingRight="@dimen/_20sdp"
                    android:paddingBottom="@dimen/_10sdp"
                    android:paddingTop="@dimen/_10sdp">

                    <TextView
                        android:id="@+id/txt_carbs"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Carbs"
                        android:textColor="@color/main_color"
                        android:textSize="@dimen/_14sdp"
                        android:fontFamily="@font/rubik"
                        android:layout_centerVertical="true"
                        android:layout_toLeftOf="@+id/txt_carbs_count"
                        android:layout_marginRight="@dimen/_10sdp"/>

                    <TextView
                        android:id="@+id/txt_carbs_count"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Set Goal"
                        android:textStyle="bold"
                        android:textColor="@color/light_blue_text"
                        android:textSize="@dimen/_14sdp"
                        android:fontFamily="@font/rubik"
                        android:layout_centerVertical="true"
                        android:layout_toLeftOf="@+id/img_carbs_right_icon"
                        android:layout_marginRight="@dimen/_10sdp"/>

                    <ImageView
                        android:id="@+id/img_carbs_right_icon"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/up_down"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"/>

                </RelativeLayout>

                <View
                    android:id="@+id/view2"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/light_gray"/>

                <RelativeLayout
                    android:id="@+id/rl_fat"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="@dimen/_20sdp"
                    android:paddingRight="@dimen/_20sdp"
                    android:paddingBottom="@dimen/_10sdp"
                    android:paddingTop="@dimen/_10sdp">

                    <TextView
                        android:id="@+id/txt_fat"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Fat"
                        android:textColor="@color/main_color"
                        android:textSize="@dimen/_14sdp"
                        android:fontFamily="@font/rubik"
                        android:layout_centerVertical="true"
                        android:layout_toLeftOf="@+id/txt_fat_count"
                        android:layout_marginRight="@dimen/_10sdp"/>

                    <TextView
                        android:id="@+id/txt_fat_count"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Set Goal"
                        android:textStyle="bold"
                        android:textColor="@color/light_blue_text"
                        android:textSize="@dimen/_14sdp"
                        android:fontFamily="@font/rubik"
                        android:layout_centerVertical="true"
                        android:layout_toLeftOf="@+id/img_fat_right_icon"
                        android:layout_marginRight="@dimen/_10sdp"/>

                    <ImageView
                        android:id="@+id/img_fat_right_icon"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/up_down"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"/>

                </RelativeLayout>

                <View
                    android:id="@+id/view3"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/light_gray"/>

                <RelativeLayout
                    android:id="@+id/rl_bmi"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="@dimen/_20sdp"
                    android:paddingRight="@dimen/_20sdp"
                    android:paddingBottom="@dimen/_10sdp"
                    android:paddingTop="@dimen/_10sdp">

                    <TextView
                        android:id="@+id/txt_bmi"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="BMI"
                        android:textColor="@color/main_color"
                        android:textSize="@dimen/_14sdp"
                        android:fontFamily="@font/rubik"
                        android:layout_centerVertical="true"
                        android:layout_toLeftOf="@+id/txt_bmi_count"
                        android:layout_marginRight="@dimen/_10sdp"/>

                    <TextView
                        android:id="@+id/txt_bmi_count"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Set Goal"
                        android:textStyle="bold"
                        android:textColor="@color/light_blue_text"
                        android:textSize="@dimen/_14sdp"
                        android:fontFamily="@font/rubik"
                        android:layout_centerVertical="true"
                        android:layout_toLeftOf="@+id/img_bmi_right_icon"
                        android:layout_marginRight="@dimen/_10sdp"/>

                    <ImageView
                        android:id="@+id/img_bmi_right_icon"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/up_down"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"/>

                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/light_gray"/>

                <RelativeLayout
                    android:id="@+id/rl_bfat"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="@dimen/_20sdp"
                    android:paddingRight="@dimen/_20sdp"
                    android:paddingBottom="@dimen/_10sdp"
                    android:paddingTop="@dimen/_10sdp">

                    <TextView
                        android:id="@+id/txt_liquid_bfat"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Body Fat %"
                        android:textColor="@color/main_color"
                        android:textSize="@dimen/_14sdp"
                        android:fontFamily="@font/rubik"
                        android:layout_centerVertical="true"
                        android:layout_toLeftOf="@+id/txt_bfat_count"
                        android:layout_marginRight="@dimen/_10sdp"/>

                    <TextView
                        android:id="@+id/txt_bfat_count"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Set Goal"
                        android:textStyle="bold"
                        android:textColor="@color/light_blue_text"
                        android:textSize="@dimen/_14sdp"
                        android:fontFamily="@font/rubik"
                        android:layout_centerVertical="true"
                        android:layout_toLeftOf="@+id/img_bfat_right_icon"
                        android:layout_marginRight="@dimen/_10sdp"/>

                    <ImageView
                        android:id="@+id/img_bfat_right_icon"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/up_down"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"/>

                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/light_gray"/>

                <RelativeLayout
                    android:id="@+id/rl_cholesterol"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="@dimen/_20sdp"
                    android:paddingRight="@dimen/_20sdp"
                    android:paddingBottom="@dimen/_10sdp"
                    android:paddingTop="@dimen/_10sdp">

                    <TextView
                        android:id="@+id/txt_cholesterol"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Cholesterol"
                        android:textColor="@color/main_color"
                        android:textSize="@dimen/_14sdp"
                        android:fontFamily="@font/rubik"
                        android:layout_centerVertical="true"
                        android:layout_toLeftOf="@+id/txt_cholesterol_count"
                        android:layout_marginRight="@dimen/_10sdp"/>

                    <TextView
                        android:id="@+id/txt_cholesterol_count"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Set Goal"
                        android:textStyle="bold"
                        android:textColor="@color/light_blue_text"
                        android:textSize="@dimen/_14sdp"
                        android:fontFamily="@font/rubik"
                        android:layout_centerVertical="true"
                        android:layout_toLeftOf="@+id/img_cholesterol_right_icon"
                        android:layout_marginRight="@dimen/_10sdp"/>

                    <ImageView
                        android:id="@+id/img_cholesterol_right_icon"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/up_down"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"/>

                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/light_gray"/>

                <RelativeLayout
                    android:id="@+id/rl_fiber"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="@dimen/_20sdp"
                    android:paddingRight="@dimen/_20sdp"
                    android:paddingBottom="@dimen/_10sdp"
                    android:paddingTop="@dimen/_10sdp">

                    <TextView
                        android:id="@+id/txt_fiber"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Fiber"
                        android:textColor="@color/main_color"
                        android:textSize="@dimen/_14sdp"
                        android:fontFamily="@font/rubik"
                        android:layout_centerVertical="true"
                        android:layout_toLeftOf="@+id/txt_fiber_count"
                        android:layout_marginRight="@dimen/_10sdp"/>

                    <TextView
                        android:id="@+id/txt_fiber_count"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Set Goal"
                        android:textStyle="bold"
                        android:textColor="@color/light_blue_text"
                        android:textSize="@dimen/_14sdp"
                        android:fontFamily="@font/rubik"
                        android:layout_centerVertical="true"
                        android:layout_toLeftOf="@+id/img_fiber_right_icon"
                        android:layout_marginRight="@dimen/_10sdp"/>

                    <ImageView
                        android:id="@+id/img_fiber_right_icon"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/up_down"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"/>

                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/light_gray"/>

                <RelativeLayout
                    android:id="@+id/rl_water"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="@dimen/_20sdp"
                    android:paddingRight="@dimen/_20sdp"
                    android:paddingBottom="@dimen/_10sdp"
                    android:paddingTop="@dimen/_10sdp">

                    <TextView
                        android:id="@+id/txt_water"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Water"
                        android:textColor="@color/main_color"
                        android:textSize="@dimen/_14sdp"
                        android:fontFamily="@font/rubik"
                        android:layout_centerVertical="true"
                        android:layout_toLeftOf="@+id/txt_water_count"
                        android:layout_marginRight="@dimen/_10sdp"/>

                    <TextView
                        android:id="@+id/txt_water_count"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Set Goal"
                        android:textStyle="bold"
                        android:textColor="@color/light_blue_text"
                        android:textSize="@dimen/_14sdp"
                        android:fontFamily="@font/rubik"
                        android:layout_centerVertical="true"
                        android:layout_toLeftOf="@+id/img_water_right_icon"
                        android:layout_marginRight="@dimen/_10sdp"/>

                    <ImageView
                        android:id="@+id/img_water_right_icon"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/up_down"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"/>

                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/light_gray"/>

                <RelativeLayout
                    android:id="@+id/rl_weight"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="@dimen/_20sdp"
                    android:paddingRight="@dimen/_20sdp"
                    android:paddingBottom="@dimen/_10sdp"
                    android:paddingTop="@dimen/_10sdp">

                    <TextView
                        android:id="@+id/txt_weight"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Weight"
                        android:textColor="@color/main_color"
                        android:textSize="@dimen/_14sdp"
                        android:fontFamily="@font/rubik"
                        android:layout_centerVertical="true"
                        android:layout_toLeftOf="@+id/txt_weight_count"
                        android:layout_marginRight="@dimen/_10sdp"/>

                    <TextView
                        android:id="@+id/txt_weight_count"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Set Goal"
                        android:textStyle="bold"
                        android:textColor="@color/light_blue_text"
                        android:textSize="@dimen/_14sdp"
                        android:fontFamily="@font/rubik"
                        android:layout_centerVertical="true"
                        android:layout_toLeftOf="@+id/img_weight_right_icon"
                        android:layout_marginRight="@dimen/_10sdp"/>

                    <ImageView
                        android:id="@+id/img_weight_right_icon"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/up_down"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"/>

                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/light_gray"/>

            </LinearLayout>

        </ScrollView>

    </RelativeLayout>

</layout>